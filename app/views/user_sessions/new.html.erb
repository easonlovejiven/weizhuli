<!-- begin -->
<div class="span5 login-center">
  <div  class="title">
  登录
  </div>
  <div class="">
    <!--form begin-->
    <%if flash[:notice]%>
    <div class="notice pd15">
    <%=flash[:notice]%>
    </div>
    <%end%>
    <%= form_for @user_session do |f| %>
    <%=hidden_field_tag :return,params[:return]%>
    
    <div class="pd15">
      <div class="">
        <label>邮箱</label>
        <%=f.text_field :login,:class =>"" %>
      </div>
      <div class="">
        <%=f.error_message_on :login%>
        <%=f.error_message_on :base%>
      </div>

      <div class="">
        <label>密码</label>
        <%=f.password_field :password,:class =>"" %>
      </div>
      <div class=""><%=f.error_message_on :password %></div>    
    </div>              
    <div class="btn_box">
      <%= f.submit _('登录'), :class=>""%>
      <p><%=link_to "忘记密码?", new_password_reset_path%></p>
    </div>       
    

    <% end%>
    <!--form end-->

  </div>
</div>
<!-- end -->
