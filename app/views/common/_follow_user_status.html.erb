               <%if current_user%>
                <%
                    case Follow::follow_status(current_user, user)
                    when Follow::STATUS_FOLLOW_EACH_OTHER
                %>
                  <strong><%=_('已互相关注')%></strong>
                <%
                  when Follow::STATUS_FOLLOWING
                %>
                    <strong><%=_('已关注')%></strong>
                <%
                  when Follow::STATUS_CAN_NOT_FOLLOW
                %>
               <% else %>
                    <%=link_to _('关注'),client_follow_path(user),:remote=>true,:class=>"ce_status_follow_user border add8",:'data-id'=>('user-'+user.id.to_s)%>
                <%end%>
                <%else%>
                   <%=link_to _('关注'),login_path(:return=>params[:return_to] || request.env["HTTP_REFERER"]),:class=>"fancybox border add8"%>
                <%end%>

