<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title><%=_('思易网')%> <%= @html_title.to_s %></title>
<%=render "/client/common/head_tag_content_for_client"%>
<script>
	// tabs dashboard
	$(function() {
		$(".share_ques_tab").tabs(".share_ques_box");
	});

</script>
</head>

<body>
<%=render "common/header"%>
<!--main begin-->
<div class="bg160_800">
    <!--left 160 begin-->
    <div class="left160">
    	<%=render "/client/common/user_pane", :user=>@user%>

        <%=render "/client/common/left_main_menu"%>

        <!--invite friend begin-->
        <div class="invite_friend">
        	<strong><%=raw(_("You have %s invitations left")%[content_tag :var, @user.property.limit_invites-@user.property.used_invites, :id=>"invitation_count"])%></strong>
        	<%=link_to _("邀请商业伙伴"), new_client_invite_path, :class=>"fancybox"%>
        </div>
        <!--invite friend end-->

    	<div class="clear">&nbsp;</div>
    </div>
    <!--left 160 end-->


	<!--right 800 begin-->
	<div class="right800">
				<!--title begin-->
	     <div class="title32"><strong><%=_('我的名片中心')%>&nbsp;&gt;</strong></div>
	     <!--title end-->
				<!--tab begin-->
	     <div class="tab_nav">
			<%=link_to _('名片夹'), exchanged_invites_client_user_business_cards_path, :class=>action_name == "exchanged_invites" ? "current" : ""%>
			<%=link_to _('编辑我的名片'), (I18n.locale==:en)?  my_en_card_client_user_business_cards_path : my_card_client_user_business_cards_path, :class=>action_name == "my_card" ? "current" : ""%>
			<%=link_to _('去交换名片'), browse_cards_client_user_business_cards_path, :class=>action_name == "browse_cards" ? "current" : ""%>
	     </div>
	     <!--tab end-->

		 <%=yield%>

	    <div class="clear">&nbsp;</div>
	</div>
	   <!--right 800 end-->


    <div class="clear">&nbsp;</div>
</div>
<!--main end-->
<%=render :partial=>"/client/business_cards/my_business_card" %>
<!--footer begin-->
<%=render "common/bottom"%>
<!--footer end-->
<script type="text/javascript">
	// tabs
   /**
	$(function() {
		$(".card_tab").tabs(".card_show");
	}); **/
	$(function(){
		$(".card_out").mouseover(
			function(){
					$(this).addClass("add");
			}
		);
		$(".card_out").mouseout(
			function(){
				$(this).removeClass("add");
			}
		);
	});
</script>
</body>
</html>

