<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_locations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_location_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Locations</h2>
    <%= render "search_form" %>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.admin_location.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th><%= t("web-app-theme.type", :default => _('类型'))  %></th>
          <th><%= t("web-app-theme.status", :default => _('状态'))  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @locations.each do |location| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= location.id %>
          </td>
                    <td>
            <%= link_to location.name, admin_location_path(location) %>
          </td>
                    <td>
            <%= location.type %>
          </td>
                    <td>
            <%= location.human_status %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_location_path(location) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_location_path(location) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_location_path(location), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @locations  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
