  <tr>
    <td><%=forward.text%></td>
    <td><%=link_to l(Time.parse(forward.created_at)), "http://weibo.com/#{forward.user.id}/#{WeiboMidUtil.mid_to_str(forward.id.to_s)}", :target=>"_blank"%></td>
  </tr>
  <%}%>

